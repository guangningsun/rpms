
.verify-left{
	width: calc(100% - 260rpx);
}
.verify-right{
	padding-left: 20rpx;
}
.verify-btn{
	height: 80rpx;
	line-height: 80rpx;
	font-size: 28rpx;
	width: 240rpx;
	border-radius: 8rpx;
	background: -webkit-gradient(linear, left top, right top, from(#39b54a), to(#8dc63f));
	background: -o-linear-gradient(left, #39b54a, #8dc63f);
	background: linear-gradient(90deg, #39b54a, #8dc63f);
}
.verify-left,.verify-right{
	float: left;
}
.landing{
	height: 84rpx;
	line-height: 84rpx;
	border-radius: 44rpx;
	font-size: 32rpx;
	background: -webkit-gradient(linear, left top, right top, from(#39b54a), to(#8dc63f));
	background: -o-linear-gradient(left, #39b54a, #8dc63f);
	background: linear-gradient(90deg, #39b54a, #8dc63f);
}
.forget-btn{
	padding: 10rpx 20rpx;
	margin-top: 380rpx;
}
.forget-input input{
	background: #F2F5F6;
	font-size: 28rpx;
	padding: 10rpx 25rpx;
	height: 62rpx;
	line-height: 62rpx;
	border-radius: 8rpx;
}
.forget-margin-b{
	margin-bottom: 25rpx;
}
.forget-input{
	padding: 10rpx 20rpx;
	overflow: auto;
}
.forget-card{
	background: #fff;
	border-radius: 12rpx;
	padding: 60rpx 25rpx;
	-webkit-box-shadow: 0 6rpx 18rpx rgba(0,0,0,0.12);
	        box-shadow: 0 6rpx 18rpx rgba(0,0,0,0.12);
	position: relative;
	margin-top: 120rpx;
}
.forget-bg {
	height: 300rpx;
	padding: 25rpx;
	margin-top: -90rpx;
	background: -webkit-gradient(linear, left top, right top, from(#39b54a), to(#8dc63f));
